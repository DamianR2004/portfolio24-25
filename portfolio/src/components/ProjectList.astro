---
import ProjectTitle from "../components/ProjectData.astro"
import data from "../data/projects.json";
---

<section class="project-list-container" id="project-list-container">
  <ul class="project-list">
    {data.map((project) => ( 
      <li><a href={`/projects/${project.key}`}>
          <ProjectTitle
              title={project.title}
          />
        </a>
      </li>
    ))}
  </ul>
</section>

<style>

.project-list-container {
  height: fit-content;
  background-color: #FF4002;
}

.project-list {
  margin: 0;
  padding: 0;
  list-style-type: none;
}

li {
  padding: 50px 20px;
  font-size: 7vw;
  border-bottom: 3px solid black;
  transition: 0.2s;
}

a{
  text-decoration: none;
  color: black;
  gap: 2em;
  animation: boo running;
  animation-timeline: view();
  animation-range: 0% , 40%;
}


@media (width < 1000px){
a{
  font-size:10vw;
  animation: boo running;
  animation-timeline: view();
  animation-range: 0% 100%;
}
}

@keyframes boo{
    0%{
      opacity: 0;
    }
    100%{
      opacity: 1;
    }
  }

</style> 